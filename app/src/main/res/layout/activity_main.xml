<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#17d9e0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="INSTRUCTIONS"
        android:id="@+id/textView4"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/underIns"
        android:text="Hey Kids!\n\nSelect a category to start your learning fun! \n  \n   *Animals, Fruits, Vegetables*\n\n Test your skills in the quiz mode!
        Quick Quiz instructions: \n   \n   *Look, Listen, and Choose!*"
        android:layout_below="@id/textView4"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let&apos;s Play"
        android:id="@+id/play"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="goToGames"
        android:textColor="#ffffff"
        android:background="#090a3f" />


</RelativeLayout>
